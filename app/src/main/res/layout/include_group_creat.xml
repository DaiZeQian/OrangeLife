<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="群昵称"
        android:textColor="@color/hint_three"
        android:textSize="@dimen/text_h" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_lightline_tran">

        <EditText
            android:id="@+id/ev_group_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="群名称"
            android:paddingLeft="20dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_s" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingRight="10dp"
            android:textSize="@dimen/text_s"
            android:textColor="@color/text_m"
            android:layout_alignParentRight="true"
            android:text="清除"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="群公告"
        android:textColor="@color/hint_three"
        android:textSize="@dimen/text_h" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:layout_marginTop="5dp"
        android:background="@drawable/bg_lightline_tran">

        <EditText
            android:id="@+id/ev_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:layout_centerVertical="true"
            android:paddingRight="80dp"
            android:gravity="center_vertical"
            android:hint="群名称"
            android:paddingLeft="20dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_s" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:paddingRight="10dp"
            android:textSize="@dimen/text_s"
            android:textColor="@color/text_m"
            android:layout_alignParentRight="true"
            android:text="清除"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="20dp"
        android:background="@color/cut_line" />

    <RelativeLayout
        android:id="@+id/rl_choose"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="选择群成员"
            android:textColor="@color/theme" />

        <ImageView style="@style/MyMenu" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cut_line" />



    <com.oneorange.view.NoScrollGridView
        android:id="@+id/gv_groups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="4" />

</LinearLayout>