<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="80dp"
    android:orientation="vertical"
    android:padding="20dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.oneorange.view.RoundImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/test_default"
                imagecontrol:border_outside_color="@android:color/white"
                imagecontrol:border_thickness="1dp" />

            <TextView
                android:id="@+id/tv_group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="name"
                android:textSize="@dimen/text_h"
                android:textColor="@color/hint_one" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_group_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="30dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="num"
            android:background="@drawable/bg_cl_orange"
            android:textColor="@color/white" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.oneorange.view.RoundImageView
                android:id="@+id/iv_group_latsicon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/test_default"
                imagecontrol:border_outside_color="@android:color/white"
                imagecontrol:border_thickness="1dp" />

            <TextView
                android:id="@+id/tv_last_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="username"
                android:textColor="@color/text_m"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_group_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:maxEms="15"
                android:text="context"
                android:maxLines="1"
                android:textColor="@color/text_m"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_group_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="time"
            android:textSize="@dimen/text_s"
            android:textColor="@color/text_s" />

    </RelativeLayout>

</LinearLayout>