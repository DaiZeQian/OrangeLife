<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="206dp"
        android:background="@mipmap/login_bg">

        <TextView
            android:id="@+id/tv_regisiter"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingRight="10dp"
            android:text="注册"
            android:textColor="@color/theme"
            android:textSize="@dimen/text_h" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:paddingLeft="40dp">

        <TextView
            android:id="@+id/tv_psd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#ff000000"
            android:shadowDx="1"
            android:shadowDy="4"
            android:shadowRadius="4"
            android:text="密码登录"
            android:textColor="@color/theme" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:layout_marginLeft="15dp"
            android:background="@color/cut_line" />

        <TextView
            android:id="@+id/tv_login_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:shadowColor="#ff000000"
            android:shadowDx="1"
            android:shadowDy="4"
            android:shadowRadius="4"
            android:text="验证码登录"
            android:textColor="@color/text_h" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="235dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录后意味着您同意橙生活的"
            android:textColor="@color/text_l"
            android:textSize="@dimen/text_xs" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="《使用协议》"
            android:textColor="@color/hint_one"
            android:textSize="@dimen/text_xs" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="43dp"
                android:layout_height="37dp"
                android:src="@mipmap/login_icon" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="开启新世界 享受自由生活"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="  open a new world to enjoy free life"
                    android:textColor="@color/text_l"
                    android:textSize="@dimen/text_xs" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>